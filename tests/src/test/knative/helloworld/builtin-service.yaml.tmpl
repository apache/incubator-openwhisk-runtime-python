apiVersion: serving.knative.dev/v1
kind: Service
metadata:
  name: python-hello-world-builtin
  namespace: default
spec:
  template:
    spec:
      containers:
        - image: DOCKER_USERNAME/action-python
          env:
            - name: __OW_RUNTIME_PLATFORM
              value: knative
            - name: __OW_ACTION_NAME
              value: greetings-builtin-code
            - name: __OW_ACTION_CODE
              value: |
                def main(params):
                  return {'payload': 'Hello World!'}
